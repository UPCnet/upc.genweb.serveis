<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="upc.genweb.serveis">

    <class class=".servei.Servei">
        <require
            permission="zope2.View"
            interface="..interfaces.IServei"
            />
        <require
            permission="cmf.ModifyPortalContent"
            set_schema="..interfaces.IServei"
            />
    </class>

    <class class=".notificacions.Notificacions">
        <require
            permission="zope2.View"
            interface="..interfaces.INotificacions"
            />
        <require
            permission="cmf.ModifyPortalContent"
            set_schema="..interfaces.INotificacions"
            />
    </class>

</configure>


